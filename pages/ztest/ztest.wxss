 /* 时间的颜色 #8d8d8d; */


/* 对齐 */
.xx_flex{
    display: flex;
}

/* 文字对齐 */
.xx_text__center{
    text-align: center;
}
.xx_text__right{
    text-align: right;
}

.xx_text__des{
    font-size: 9pt;
}

.xx_text__color_primary{
    color:#1AAD19;
}

/* 图片设置 */
.image_icon{
    width: 22px;
    height: 22px
}


/* 点击后变色 */
.xx_active {
    background-color: #ECECEC !important;
}


/*栏目分割线  */
.xx_line__gray{
    content: "";
    border-bottom: 1rpx #f0f0f0 solid;
}

/* button 按钮 */
.xx_button__primary  , .xx_button__normal{
margin: 30px 15px;
padding: 12pt 15px; 
text-align: center;
font-size: 11pt;
line-height: 11pt;
}
/* 主要按钮 */
.xx_button__primary{
color:#FFFFFF;
background-color:#1AAD19;
}
.xx_button__primary_press{
    color:rgba(255, 255, 255, 0.6) !important;
    background-color:#179B16;
}
/* 次要按钮 */
.xx_button__normal{
color:#000000;
background-color:#F8F8F8;
}
/* button 按钮 */
.xx_button__normal_press{
color:rgba(0, 0, 0, 0.6);
background-color:#DEDEDE;
}

/* 信息卡片 */
.xx_card{
    float: left;
    width: 50%;
}

.xx_card__node{
    margin: 15px;
    padding: 15px;
    background-color: #fff;
    border-radius: 5px;
}

.xx_card__title{
    font-size: 11pt;
}
.xx_card__content{
    font-size: 9pt;
    color: #8d8d8d;
}



/* 文章详情 */
.xx_article{
    
    background-color: #fff;
    padding: 0 15px;
    /* margin: 15px 0; */
}
.xx_article__title_important{
    margin: 25px 0 15px; 
    font-size: 14pt;
}
.xx_article__title_border{
    font-size: 12pt;
    border-left: 2px #187bbf solid;
    padding-left: 5px;  
    margin: 25px 0 15px; 
}

.xx_article__content{
    font-size: 11pt;
    line-height: 27px;
}






/* tab选择按钮 */
.xx_tab{
    background-color: #fff;
    padding: 0 15px;
}
.xx_tab__node{
    font-size:9pt ;
    line-height: 9pt;
    padding: 9pt 2px;
}

.xx_tab__select{
    color: #187bbf;
    border-bottom: 2px #187bbf solid;

}

/* 文章 资讯 */
.xx_list{
    padding: 0 15px;
    background-color: #fff;
}
.xx_list__node{
    padding:  15px 0;
}
.xx_list__title{
    font-size: 11pt;
    color:  #151515;
}
.xx_list__summery{
    font-size: 9pt;
    color:  #878787;
    /* margin-top:12px;  */
