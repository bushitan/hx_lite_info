position:relative;
overflow:hidden;

}


.white{
    background-color:#FFFFFF;
    display: flex;
    justify-content: space-between;
}

.panel__hd {
    padding:14px 15px 10px;
    color:#999999;
    font-size:13px;
    position:relative;
}


.bottom-border{
    background-color:#FFFFFF;
     content:" ";
    height:1px;
     border-top:1rpx solid #E5E5E5;  
    color:#D9D9D9;
    /* margin: 0 15px; */
}




.meeting__box {
/* padding:8px 8px 8px; */
padding:16rpx;
margin-bottom:8px; 
position:relative;
background-color: #fff;

}
.meeting__box:first-child::before {
display:none;

}

.meeting__title{
    text-align: center;
    line-height: 25px;
    font-size: 13pt;
    font-weight:bold;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}
.meeting__des{
    /* height: 70rpx;  */
    /* line-height: 35rpx; */
    /* font-size: 11px; */
     font-size: 9pt; 
    color: #888888;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}
.meeting__footer{
    /* width: 471rpx; */
    margin-top: 10rpx;
    text-align: right; 
    line-height: 20px;
    font-size: 8pt;
    color: #bbbbbb;
}
.meeting__footer label{
     margin-left:10px; 
}
.meeting__footer .read{
     margin:0 2px; 
}


